{% extends "_includes/default.njk" %}
 
{% block title %}Questifier{% endblock %}
 
{% block content %}
<main class="mx-auto max-w-8xl bg-gray-200 h-screen">
    <nav class="px-4 pt-4 bg-indigo-700 text-indigo-100">
        <h1 class="text-2xl mb-2">Questifier</h1>
        <ul>
            <li class="inline-block"><a href="/editor" class="px-4 pt-2 pb-2 hover:bg-gray-200 hover:text-indigo-700 block">Quest settings</a></li>
            <li class="inline-block"><span class="px-4 pt-2 pb-2 bg-gray-200 text-indigo-700 block">Stages</span></li>
        </ul>
    </nav>

    <div
        x-data="page()" class="flex flex-row"
    >
        <section class="flex flex-col flex-1 p-4">
            <h2 class="text-lg font-bold mb-2">Blocks</h2>
            <div>
                <button @click="isShowingPlaceBlocks=!isShowingPlaceBlocks" class="block text-white bg-indigo-700 py-1 px-5 mb-2 rounded hover:bg-indigo-400">Place blocks</button>
                <div x-show="isShowingPlaceBlocks" class="mb-6">
                    <label for="" class="block">Name of blocks</label>
                    <input type="text" class="px-2 mb-2" />
                    <label for="" class="block">Amount of blocks</label>
                    <input type="text" class="px-2 mb-2" />
                    <label for="" class="block">Durability of blocks</label>
                    <input type="text" class="px-2 mb-2" />
                </div>
                <button @click="isShowingBreakBlocks=!isShowingBreakBlocks" class="block text-white bg-indigo-700 py-1 px-5 rounded hover:bg-indigo-400">Break blocks</button>
                <div x-show="isShowingBreakBlocks" class="mb-6">
                    <label for="" class="block">Name of blocks</label>
                    <input type="text" class="px-2 mb-2" />
                    <label for="" class="block">Amount of blocks</label>
                    <input type="text" class="px-2 mb-2" />
                    <label for="" class="block">Durability of blocks</label>
                    <input type="text" class="px-2 mb-2" />
                </div>
            </div>
            <h2 class="text-lg font-bold mt-8 mb-2">NPCs</h2>
            <div>
                <button class="block text-white bg-indigo-700 py-1 px-5 mb-2 rounded hover:bg-indigo-400">Talk to NPC</button>
                <button class="block text-white bg-indigo-700 py-1 px-5 rounded hover:bg-indigo-400">Deliver item(s) to NPC</button>
            </div>
        </section>


        <section class="flex flex-1 p-4">
            <div class="flex flex-col">

            </div>

        </section>
    </div>

    <script type="text/javascript">
        function page() {
            return {
                isShowingPlaceBlocks: false,
                isShowingBreakBlocks: false,
                message: "Hello world",
                access() {
                    this.$refs.output.innerText = this.message;
                },
            };
        }
    </script>


</main>
{% endblock %}
